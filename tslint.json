{
  "extends": [
    "tslint:recommended",
    "tslint-consistent-codestyle"
  ],
  "linterOptions": {
    "exclude": [
      "src/bin/hypergres.js",
      "src/cli/init/template.mock.js",
      "src/cli/init/template.mock.ts",
      "src/**/*.test.ts",
      "src/**/__mocks__/*",
      "coverage/**/*",
      "dist/**/*"
    ]
  },
  "rules": {
    "trailing-comma": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-string-literal": false,
    "no-angle-bracket-type-assertion": false,
    "no-empty-interface": false,
    "variable-name": false,
    "forin": false,
    "no-console": false,
    "quotemark": [true, "single"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "interface-name": [true, "never-prefix"],
    "member-access": [true, "no-public"],
    "naming-convention": [
      true,
      {"type": "member", "modifiers": "protected", "leadingUnderscore": "require"}
    ],
    "completed-docs": [true, "classes", "enums", "functions", "interfaces", "methods", "types", "variables", "properties"],
    "jsdoc-format": true
  }
}
